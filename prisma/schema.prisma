generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  DONE
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
  tasks Task[]
}

model Task {
  id           String     @id @default(uuid())
  title        String     @unique
  description  String?
  status       TaskStatus @default(OPEN)
  assignedTo   User?      @relation(fields: [assignedToId], references: [id])
  assignedToId String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}
